<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView android:id="@+id/lista_produto_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Produto 1"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <RelativeLayout android:id="@+id/lista_produto_container_quantidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView android:id="@+id/lista_produto_arrecadado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"/>

                <TextView android:id="@+id/lista_produto_barra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:layout_toRightOf="@id/lista_produto_arrecadado"/>

                <TextView android:id="@+id/lista_produto_quantidade_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_toRightOf="@id/lista_produto_barra"/>
            </RelativeLayout>


            <CheckBox android:id="@+id/lista_produto_selecionado"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/lista_produto_container_quantidade"/>



        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>