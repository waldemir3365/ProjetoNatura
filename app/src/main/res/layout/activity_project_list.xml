<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_project"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="br.com.fiap.natura.naturaapp.ProjectListActivity"
    android:orientation="vertical"
    android:background="@color/corFundoClara">
    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/corFundoEscura">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:src="@drawable/back"
                android:onClick="voltar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Projetos"
                android:textSize="27dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/corPadraoForte"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/menu"/>
        </RelativeLayout>
    </Toolbar>

    <RelativeLayout
        android:id="@+id/layoutContainerIcones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true">

        <ListView android:id="@+id/lvProjetos"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>
