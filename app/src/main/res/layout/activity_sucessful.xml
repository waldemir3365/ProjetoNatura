<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.fiap.natura.naturaapp.SucessfulActivity">

    <TextView android:id="@+id/txtSucesso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="180dp"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Sua compra foi feita com sucesso!"/>

    <Button android:id="@+id/btnSucessoOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSucesso"
        android:textSize="16dp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@color/corPadraoForte"
        android:textColor="#FFFFFF"
        android:text="OK!"
        android:onClick="finaliza"/>



</RelativeLayout>
