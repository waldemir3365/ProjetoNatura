<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.fiap.natura.naturaapp.DonationActivity">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/corFundoEscura"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:src="@drawable/back"
                android:onClick="voltar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Parceiros"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/corPadraoForte"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/menu" />
        </RelativeLayout>
    </Toolbar>

    <TextView android:id="@+id/txtTituloPagina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Escolha onde quer comprar seus produtos:"
        android:padding="10dp"
        android:textSize="18dp"
        android:layout_below="@id/toolbar" />

    <ListView android:id="@+id/lvParceiros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtTituloPagina">

    </ListView>


</RelativeLayout>
